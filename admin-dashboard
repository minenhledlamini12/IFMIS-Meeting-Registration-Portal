    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            // Navigation handling
            $('.nav-link').on('click', function(e) {
                e.preventDefault();
                $('.nav-link').removeClass('active');
                $(this).addClass('active');
                
                const view = $(this).data('view');
                $('.view-content').addClass('d-none');
                $('#' + view).removeClass('d-none');
            });
            
            // Create Meeting button
            $('#createMeetingBtn').on('click', function() {
                $('#createMeetingModal').modal('show');
            });
            
            // Quick Actions in Dashboard
            $('.summary-card .btn-outline-primary').on('click', function() {
                $('.nav-link').removeClass('active');
                $('.nav-link[data-view="reports"]').addClass('active');
                $('.view-content').addClass('d-none');
                $('#reports').removeClass('d-none');
            });
            
            $('.summary-card .btn-gold').on('click', function() {
                $('#createMeetingModal').modal('show');
            });
            
            // Export buttons
            $('.btn-outline-secondary').on('click', function() {
                alert('Export functionality would be implemented with backend integration.');
            });
            
            $('.btn-outline-primary').on('click', function() {
                alert('PDF export would generate official attendance certificate.');
            });
        });
    </script>
    <!-- Tom Select JS -->
    <script src="https://cdn.jsdelivr.net/npm/tom-select@2.2.2/dist/js/tom-select.complete.min.js"></script>
